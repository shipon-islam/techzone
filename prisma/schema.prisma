generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Images {
  key String
  url String
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstname String
  lastname  String
  email     String @unique
  password  String
  avatar    String
  role      Role   @default(USER)
}

model Gallery {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image Images
}

model Todos {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
